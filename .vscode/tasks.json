{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build (x64)",
            "type": "shell",
            "command": "rm -rf ./build/ && meson ./build/ --buildtype debug --cross-file ./drivers/core/x64/x64.ini && ninja -C ./build/ && rm -rf ~/os.log",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
            },
            "problemMatcher": []
        },
        {
            "label": "Start QEMU (x64)",
            "type": "shell",
            "command": "/usr/bin/qemu-system-x86_64",
            "args": [
                "-m", "5G",
                "-smp", "3",
                "-serial", "stdio",
                "-d", "int",
                "-D", "~/qemu.log",
                "-no-reboot",
                "-s",
                "-S",
                "-cdrom", "${workspaceFolder}/build/system.iso",
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
            },
            "isBackground": true,
            "dependsOn": [
                "Clean Build (x64)",
            ],
            "problemMatcher": {
                "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "severity": 3,
                      "code": 4,
                      "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^VNC server running on 127.0.0.1:5900"
                }
            }
        },
        {
            "label": "Kill QEMU",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
          "id": "terminate",
          "type": "command",
          "command": "workbench.action.tasks.terminate",
          "args": "terminateAll"
        }
    ]
  }
