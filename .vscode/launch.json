    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (x64)",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/build/iso/boot/core_x64.bin",
            "autorun": [
                "set arch i386:x86-64:intel",
                "break core_entry",                
            ],
            "printCalls": true,
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Start QEMU (x64)",
            "postDebugTask": "Kill QEMU",
        }
    ]
}
