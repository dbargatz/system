    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (qemu-pc)",
            "type": "gdb",
            "gdbpath": "gdb-multiarch",
            "request": "attach",
            "executable": "${workspaceFolder}/build/qemu_pc/iso/boot/core_qemu_pc.bin",
            "autorun": [
                "set arch i386:x86-64:intel",
                "break core_entry",
            ],
            "printCalls": true,
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Start QEMU (qemu-pc)",
            "postDebugTask": "Kill QEMU",
        },
        {
            "name": "Debug (raspi3b)",
            "type": "gdb",
            "gdbpath": "gdb-multiarch",
            "request": "attach",
            "executable": "${workspaceFolder}/build/raspi3b/drivers/core/core_raspi3b.bin",
            "autorun": [
                "set arch aarch64",
                "break core_entry",
            ],
            "printCalls": true,
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Start QEMU (raspi3b)",
            "postDebugTask": "Kill QEMU",
        }
    ]
}
