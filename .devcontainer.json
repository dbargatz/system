{
    "dockerFile": "tools/Dockerfile",
    "image": "dbargatz/system-build:latest",
    "runArgs":[
        "--privileged"
    ],
    // Install various VSCode extensions to make development in VSCode and
    // Codespaces more pleasant.
    "extensions": [
        "13xforever.language-x86-64-assembly",
        "asabil.meson",
        "cschlosser.doxdocgen",
        "davidanson.vscode-markdownlint",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools",
    ]
}
